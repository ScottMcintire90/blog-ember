<div>
  <h3>Add a comment</h3>
  <form>
    <div class="form-group">
      <label for="name">Name: </label>
      {{input value=name class="form-control"}}
    </div>
    <div class="form-group">
      <label for="message">Message: </label>
      {{input value=message class="form-control"}}
    </div>
    <div class="form-group">
      <label for="date">Date: </label>
      {{input value=date class="form-control"}}
    </div>
    <button {{action 'saveComment'}}>Post Comment</button>
  </form>
</div>
