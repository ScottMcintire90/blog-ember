<div>
  <h3>Add a comment</h3>
  <form>
    <div class="form-group">
      <label for="name">Name: </label>
      {{input value=name}}
    </div>
    <div class="form-group">
      <label for="message">Message: </label>
      {{input value=message}}
    </div>
    <div class="form-group">
      <label for="date">Date: </label>
      {{input value=date}}
    </div>
    <button {{action 'saveComment' comment}}>Post Comment</button>
  </form>
</div>
