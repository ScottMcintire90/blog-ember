<div class="contact container">
  <h2>Contact Us</h2>
  <form id="contact_form" action="#" method="POST" enctype="multipart/form-data">
	<div class="row">
    <input id="name" class="input" name="name" type="text" value="" size="30" placeholder="Name">
	</div>
  <br>
	<div class="row">
    <input id="email" class="input" name="email" type="text" value="" size="30" placeholder="Email">
	</div>
  <br>
	<div class="row">
		<label for="message">Your message:</label><br />
		<textarea id="textEmail" class="input" name="message" rows="7" cols="30"></textarea><br />
	</div>
  <br>
	<input id="submit_button" type="submit" value="Send email" />
</form>

</div>
