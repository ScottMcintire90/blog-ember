<div class="blogPost container">
  <h2>Blog Posts</h2>

  <div class="blogPosts col-md-6">
    <br>
    <ul>
      {{#each model.posts as |post|}}
        <div class="singlePost">
          {{#link-to 'post' post.id}}<h3>{{post.title}}</h3>{{/link-to}}
          <h4>{{post.genre}}</h4>
          {{#link-to 'post' post.id}}<img src={{post.image}}>{{/link-to}}
          <p>{{post.content}}</p>
          <p>Posted by {{post.author}} on {{post.date}}</p>
        </div>
      {{/each}}
    </ul>
  </div>

  <div class="newPost col-md-6">
    {{new-post save="save"}}
  </div>



</div>
